
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h1 style="color:blue;"><i>Vui lòng đăng nhập</i></h1>
<table>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="text-align:center;">
            <td style="text-align:right;">Tên đăng nhập:</td>
            <td><input type="text" name="TenDN" class="form-control" />@ViewData["Loi1"]</td>
        </tr>
        <tr>
            <td style="text-align:right;">Mật khẩu:</td>
            <td><input type="password" name="MatKhau" class="form-control" />@ViewData["Loi2"]</td>
        </tr>
        <tr>
            <td colspan="4"><input type="submit" value="Đăng Nhập" class="btn btn-primary" /></td>
        </tr>
    }
    <p><a href="@Url.Action("DangKy","NguoiDung")" class="btn btn-primary">Đăng ký ngay</a></p>
</table>
<h5 style="color:red; text-align:center;">@ViewBag.tb</h5>
<h1>@ViewBag.tb</h1>


